<h1>Update Your Article</h1> 

<form action="/articles/<%= @article.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="PATCH">
    Title: <input type="text" id="title" name="article[title]" value= "<%= @article.title %>" ><br>
    Content:  <input type="text area" id = "content" name="article[content]" value= "<%= @article.content %>">
    <input type="submit" id="submit">
</form>