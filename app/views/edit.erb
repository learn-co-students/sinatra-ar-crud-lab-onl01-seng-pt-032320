<div class="card-body">
	<form method="POST" action="/articles/<%= @article.id %>">
		<input id="hidden" type="hidden" name="_method" value="PATCH">
		<div class="form-group">
			<label for="title">Title</label>
			<input value="<%= @article.title %>" type="text" class="form-control" name="title" id="title" aria-describedby="titleHelp">
			<small id="titleHelp" class="form-text text-muted">Title of the article</small>
		</div>
		<div class="form-group">
			<label for="content">Content</label>
			<textarea class="form-control" name="content" id="content" rows="3"><%= @article.content %></textarea>
		</div>
		<button type="submit" class="btn btn-primary">Submit</button>
	</form>
</div>